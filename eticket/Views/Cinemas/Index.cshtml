@model IEnumerable<Cinema>
@{
    ViewData["title"] = "List of Cinemas";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(x => x.Logo)</th>

                    <th>@Html.DisplayNameFor(x => x.Name)</th>

                    <th>@Html.DisplayNameFor(x => x.Description)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@x.Logo" alt="@x.Name" style="max-width:150px" />
                        </td>
                        <td class="align-middle">@Html.DisplayFor(model => x.Name)</td>
                        <td class="align-middle">@Html.DisplayFor(model => x.Description)</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>